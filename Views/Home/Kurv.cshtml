@model List<Spil>

 <html>

     <body>
    
    @for (int i = 0; i < Model.Count; i++)
    {

        <div class = "Kurv-item">


            <div class="Kurv-img">
              
                    <img src ="@Model[i].SpilBilledStiFuld" height="100"/>
            
            </div>

            <div class="Title">
                @Model[i].SpilNavn
               
            </div>

            <div class="Pris" >
                @Math.Round(Model[i].SpilPris,2) kr
            </div>

            <div class="Antal" >
               <form action="/Home/PlusIKurv" metode="get"><input type="hidden" name="Id" value="@Model[i].SpilId" /><button class="plusbtn">+</button></form>
               @Model[i].SpilAntal
              <form action="/Home/MinusIKurv" metode="get"><input type="hidden" name="Id" value="@Model[i].SpilId" /> <button class="minbtn">-</button></form>

            </div>

        </div>
        <br>
        <br>
    }

    <div>
        <div>
            <form action="/Home/BestillingsForm" metode="get">
              <button class="bestil-btn">Bestil</button>
            </form>
         </div>

         <div class="Pris">
            @ViewBag.SamletPris kr
          </div>
    </div>
    <br>
    <br>
    </body>
 </html>